<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.ui.main.RegisterFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/navigation"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Register"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                   />
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/back"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:padding="10dp"
                    android:backgroundTint="@color/white"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:layout_margin="1dp"
                    android:src="@drawable/sasa_kazi" />
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="4dp"
                    android:elevation="14dp"
                    android:id="@+id/card_view"
                    tools:targetApi="lollipop">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/layout1"
                            >
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txtName"
                                style="@style/TextLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                app:endIconDrawable="@drawable/ic_baseline_person_24"
                                app:endIconMode="custom"
                                app:endIconTintMode="src_atop"
                                >

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:hint="Enter FullNames"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:inputType="textPersonName"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txtEmail"
                                style="@style/TextLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                app:endIconDrawable="@drawable/ic_baseline_email_24"
                                app:endIconMode="custom"
                                app:endIconTintMode="src_atop"
                                >

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/email"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:hint="Email"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:inputType="textEmailAddress" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txtPhone"
                                style="@style/TextLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                app:endIconDrawable="@drawable/ic_baseline_contact_phone_24"
                                app:endIconMode="custom"
                                app:endIconTintMode="src_atop"

                                >

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:hint="254700107000"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:inputType="phone" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txtPassword"
                                style="@style/TextLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                app:endIconTintMode="src_atop"
                                app:endIconMode="password_toggle"

                                >
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/password"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:hint="Password"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:inputType="textPassword" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <Button
                                android:id="@+id/register"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_margin="5dp"
                                android:text="REGISTER"
                                android:textAlignment="center"
                                android:backgroundTint="@color/purple_200"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>
                    </ScrollView>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/avi"
        android:padding="12dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/orange"
        android:visibility="invisible" />
</RelativeLayout>