<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deletech.ui.main.DashboardFragment">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/itemsswipetorefresh"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="1"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_height="80dp"
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:paddingRight="10dp"
                android:layout_margin="1dp"
                android:src="@drawable/sasa_kazi"
               />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:id="@+id/intro"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:text=""
                android:textStyle="bold"
                android:gravity="center_horizontal"
                >

            </TextView>
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/card_view11"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_bar"
            android:elevation="10dp"
            android:padding="5dp"
            app:cardUseCompatPadding="true"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="5dp"
            app:cardCornerRadius="4dp">
            <TextView
                android:id="@+id/notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="3dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:text="@string/sasakazi_merchandise_buy_sasakazi_branded_tshirt_at_an_affordable_price" />
        </androidx.cardview.widget.CardView>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_below="@+id/card_view11"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:id="@+id/card_view"
                        android:layout_height="wrap_content"
                        android:elevation="10dp"
                        android:padding="5dp"
                        app:cardUseCompatPadding="true"
                        android:clipToPadding="false"
                        android:clipChildren="false"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            >

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:id="@+id/card_view_black"
                                android:layout_height="wrap_content"
                                android:elevation="10dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                app:cardUseCompatPadding="true"
                                android:clipToPadding="false"
                                android:clipChildren="false"
                                app:cardElevation="5dp"
                                app:cardCornerRadius="10dp">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <com.deletech.utils.CircleImageView
                                        android:layout_width="100dp"
                                        android:id="@+id/white_t_shirt"
                                        android:layout_height="100dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginStart="1dp"
                                        android:layout_marginTop="1dp"
                                        android:layout_marginEnd="1dp"
                                        android:src="@drawable/white_tshirt"
                                        android:layout_marginBottom="1dp"
                                        app:civ_border_color="@color/orange"
                                        app:civ_border_overlay="true"
                                        app:civ_border_width="1dp"
                                     />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/amount_1"
                                        android:layout_below="@+id/white_t_shirt"
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        android:padding="10dp"
                                        android:text="200 KSH"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        />
                                    <Button
                                        android:id="@+id/buy_white"
                                        android:layout_width="60dp"
                                        android:layout_height="35dp"
                                        android:layout_margin="5dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_below="@id/white_t_shirt"
                                        android:text="Buy"
                                        android:textAlignment="center"
                                        android:backgroundTint="@color/purple_200"
                                        android:textSize="12sp"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>



                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:id="@+id/card_view3"
                                android:layout_height="wrap_content"
                                android:elevation="10dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                app:cardUseCompatPadding="true"
                                android:clipToPadding="false"
                                android:clipChildren="false"
                                app:cardElevation="5dp"
                                app:cardCornerRadius="10dp">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:id="@+id/betsLink3"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <com.deletech.utils.CircleImageView
                                        android:id="@+id/black_t_shirt"
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_margin="1dp"
                                        android:src="@drawable/black_tshirt"
                                        app:civ_border_color="@color/orange"
                                        app:civ_border_overlay="true"
                                        app:civ_border_width="1dp"
                                       />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/black_t_shirt"
                                        android:textStyle="bold"
                                        android:id="@+id/amount_2"
                                        android:textSize="14sp"
                                        android:padding="10dp"
                                        android:text="250 KSH"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                         />
                                    <Button
                                        android:id="@+id/buy_black"
                                        android:layout_width="60dp"
                                        android:layout_height="35dp"
                                        android:layout_margin="5dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_below="@id/black_t_shirt"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:text="Buy"
                                        android:textAlignment="center"
                                        android:backgroundTint="@color/purple_200"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/receipt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="3dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:text="@string/recepts" />
                    <TextView
                        android:id="@+id/swipe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="3dp"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:textColor="@color/orange"
                        android:singleLine="true"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:text="@string/swipe_down_to_refresh" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:id="@+id/recyclerView"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:scrollbars="vertical"
                        android:layout_marginBottom="16dp"
                        />

                </LinearLayout>
            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
        <ProgressBar
            android:id="@+id/avi"
            android:padding="12dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/orange"
            android:visibility="invisible"/>
        <LinearLayout
            android:id="@+id/empty_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            >
            <TextView
                android:id="@+id/empty_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/empty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="28dp"
                android:visibility="invisible"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="28dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="Reload" />

            <Button
                android:id="@+id/empty_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="28dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="28dp"
                android:backgroundTint="@color/purple_200"
                android:gravity="center"
                android:text="Try Again" />
        </LinearLayout>

    </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>