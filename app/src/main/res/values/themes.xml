<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SasaKazi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.SasaKazi.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>
    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" >
        <item name="boxCornerRadiusBottomStart">1dp</item>
        <item name="boxCornerRadiusBottomEnd">1dp</item>
        <item name="boxCornerRadiusTopStart">1dp</item>
        <item name="boxCornerRadiusTopEnd">1dp</item>

        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#808080</item>
        <item name="boxStrokeColor">#808080</item>
        <item name="android:textSize">20sp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="colorAccent">#808080</item>
        <item name="colorControlNormal">#808080</item>
        <item name="colorControlActivated">#808080</item>

    </style>
</resources>